<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="../public/js/script.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Main Blog Page</title>
    <style>
        /* Circle profile image styles */
        .profile-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
        }

        /* Main container styles */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding-top: 30px;
        }

        /* Blog cards layout */
        .card {
            width: 18rem;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #007bff;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        /* Align the profile and blog posts properly */
        .profile-section {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .profile-section h2 {
            margin-left: 20px;
            font-size: 1.6rem;
            font-weight: bold;
        }

        /* "Post a Blog" Link Styling */
        .post-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .post-link:hover {
            background-color: #0056b3;
        }

        /* Responsive layout for small screens */
        @media (max-width: 768px) {
            .card {
                width: 100%;
            }

            .container {
                padding-left: 10px;
                padding-right: 10px;
            }

            .profile-section {
                flex-direction: column;
                align-items: flex-start;
            }

            .profile-section h2 {
                margin-left: 0;
                margin-top: 10px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="profile-section">
            <!-- Display Profile Picture with proper image path -->
            <div class="w-10 h-10 overflow-hidden">
                <img class="profile-img" src="/images/uploads/<%= Userdetail.ProfilePicture %>" alt="Profile Picture">
            </div>
            <h2>User: <%= `${Userdetail.Email}, ${Userdetail.Username}` %></h2>
        </div>

        <div class="row">
            <!-- Loop through blogs and display each one in a card format -->
            <% UserBlog.forEach((detail) => { %>
                <div class="col-md-4 col-sm-12">
                    <div class="card">
                        <!-- Blog Image -->
                        <img class="card-img-top" src="/images/uploads/<%= detail.BlogImage %>" alt="Card image cap">
                        <div class="card-body">
                            <!-- Blog Heading -->
                            <h5 class="card-title"><%= detail.Blogheading %></h5>
                            <!-- Blog Data/Content -->
                            <p class="card-text"><%= detail.BlogData %></p>
                            <!-- Link to Blog Post (Optional) -->
                            <a href="/blog/<%= detail.id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Link to create a new blog post -->
        <a href="/create" class="post-link">Post a Blog</a>
    </div>
</body>

</html>
